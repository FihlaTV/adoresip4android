<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/screen_tab_dialer_linearLayout_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/screen_tab_dialer_editText_number"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="1dip"
                android:layout_weight="2.5"
                android:background="@drawable/btn_dial_action"
                android:cursorVisible="false"
                android:editable="true"
                android:focusableInTouchMode="true"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text=""
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="28sp" >
            </EditText>

            <ImageButton
                android:id="@+id/screen_tab_dialer_button_del"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:layout_weight="2.4"
                android:background="@drawable/btn_dial_action"
                android:src="@drawable/ic_dial_action_delete" >
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_margin="3px"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="10" >

            <LinearLayout
                style="@style/DialPadRow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                layout="@layout/view_dialer_button_text"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:background="@drawable/btn_dial_action"
                    android:src="@drawable/dial_num_1_no_vm" />

                <include
                    android:id="@+id/screen_tab_dialer_button_2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:src="@drawable/dial_num_2" />

                <include
                    android:id="@+id/screen_tab_dialer_button_3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:src="@drawable/dial_num_3" />
            </LinearLayout>

            <LinearLayout
                style="@style/DialPadRow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:src="@drawable/dial_num_4" />

                <include
                    android:id="@+id/screen_tab_dialer_button_5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:src="@drawable/dial_num_5" />

                <include
                    android:id="@+id/screen_tab_dialer_button_6"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:src="@drawable/dial_num_6" />
            </LinearLayout>

            <LinearLayout
                style="@style/DialPadRow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_7"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:src="@drawable/dial_num_7" />

                <include
                    android:id="@+id/screen_tab_dialer_button_8"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:src="@drawable/dial_num_8" />

                <include
                    android:id="@+id/screen_tab_dialer_button_9"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:src="@drawable/dial_num_9" />
            </LinearLayout>

            <LinearLayout
                style="@style/DialPadRow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="6" >

                <include
                    android:id="@+id/screen_tab_dialer_button_star"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:src="@drawable/dial_num_star" />

                <include
                    android:id="@+id/screen_tab_dialer_button_0"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:src="@drawable/dial_num_0" />

                <include
                    android:id="@+id/screen_tab_dialer_button_sharp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_text"
                    android:src="@drawable/dial_num_pound" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:weightSum="8" >

                <include
                    android:id="@+id/screen_tab_dialer_button_del1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="0px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_image" />

                <include
                    android:id="@+id/screen_tab_dialer_button_audio"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="0px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_image" />

                <include
                    android:id="@+id/screen_tab_dialer_button_video"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="0px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_image" />

                <include
                    android:id="@+id/screen_tab_dialer_button_chat"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="0px"
                    android:layout_weight="2"
                    layout="@layout/view_dialer_button_image" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>